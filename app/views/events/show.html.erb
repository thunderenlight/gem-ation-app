<% header @event.title %>

<p><%= @event.title %></p>
<p>Location: <%= @event.location %></p>
<p>Coordinates: <%= @event.latitude %><%= @event.longitude %></p>
<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@event.latitude},#{@event.longitude}&markers=#{@event.latitude},#{@event.longitude}&zoom=7&size=640x400&key=AIzaSyBWykA_3qHgjjviD1DB1o6iBNbs8RiHYos",
              class: 'img-fluid img-rounded', alt: "#{@event.title} on the map"%><br>
<p>Attending: <%= @invitations.first.invitee.name %></p>

<div class="btn-group">
  <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-info' %>
  <%= link_to 'Delete', event_path(@event), data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger' %>
</div>